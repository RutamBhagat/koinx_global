generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum CurrencyName {
    BITCOIN
    ETHEREUM
    MATIC_NETWORK
}

model CryptocurrencyEntry {
    id           String       @id @default(auto()) @map("_id") @db.ObjectId
    currencyName CurrencyName
    created_at   DateTime     @default(now())
    updated_at   DateTime     @updatedAt
    usd          Float
    usdMarketCap Float
    usd24hChange Float

    @@map("cryptocurrency_entries")
}
